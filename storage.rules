rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow writes only to the 'listings' folder for authenticated users.
    // Users can only upload files to a path that matches their user ID.
    match /listings/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
